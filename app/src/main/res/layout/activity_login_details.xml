<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginDetailsActivity">

    <View
        android:id="@+id/boundary"
        android:layout_width="332dp"
        android:layout_height="565dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/boundary"
        android:elevation="1.67dp" />
    <!-- Personal Details -->
    <TextView
        android:id="@+id/create_acco"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="48dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="9sp"
        android:text="Personal Details"
        android:textAppearance="@style/create_acco"
        android:textColor="#000"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/age1"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="60dp"
        android:text="Age"
        android:textAppearance="@style/age" />

    <EditText
        android:id="@+id/age"
        android:layout_width="258.33dp"
        android:layout_height="36.67dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/rectangle_2"
        android:hint="@string/age"
        android:inputType="number"
        android:padding="4dp"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:textColor="@android:color/black"

        />

    <TextView
        android:id="@+id/qual"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="145dp"
        android:text="Qualification"
        android:textAppearance="@style/age" />

    <AutoCompleteTextView
        android:id="@+id/qualLanguagesAutoComplete"
        android:layout_width="258.33dp"
        android:layout_height="36.67dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/rectangle_2"
        android:hint="Enter qualification"
        android:inputType="text"
        android:padding="4dp"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/nativelang"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="230dp"
        android:text="Native language"
        android:textAppearance="@style/age" />

    <AutoCompleteTextView
        android:id="@+id/nativeLanguagesAutoComplete"
        android:layout_width="258.33dp"
        android:layout_height="36.67dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="265dp"
        android:background="@drawable/rectangle_2"
        android:hint="Native language you speak"
        android:inputType="text"
        android:padding="4dp"
        android:paddingStart="24dp"
        android:paddingLeft="24dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/prof"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="315dp"
        android:text="Proficiency level"
        android:textAppearance="@style/age" />

    <RelativeLayout
        android:layout_width="258.33dp"
        android:layout_height="36.67dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/rectangle_2">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="257dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="0dp"
            android:inputType="text"
            android:padding="4dp"
            android:paddingStart="24dp"
            android:paddingLeft="24dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/gender_label"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="400dp"
        android:text="Gender"
        android:textAppearance="@style/age" />


    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="435dp"
        android:background="@drawable/rectangle_2"
        android:hint="Enter your name"
        android:inputType="number"
        android:orientation="horizontal"
        android:padding="10dp"
        android:paddingStart="24dp"
        android:paddingLeft="24dp">

        <RadioButton
            android:id="@+id/female"
            android:layout_width="117dp"
            android:layout_height="37dp"
            android:buttonTint="@android:color/black"
            android:text="Female"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/male"
            android:layout_width="82dp"
            android:layout_height="37dp"

            android:buttonTint="@android:color/black"
            android:text="Male"
            android:textColor="@android:color/black" />

    </RadioGroup>

    <Button
        android:id="@+id/save"
        android:layout_width="163.33dp"
        android:layout_height="40.67dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="502dp"
        android:background="@drawable/rectangle_4"
        android:text="Next"
        android:textAppearance="@style/send_otp"
        android:textColor="#FFFF" />
</RelativeLayout>